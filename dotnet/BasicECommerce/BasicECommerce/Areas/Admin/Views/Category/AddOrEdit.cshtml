@model BasicECommerce.Model.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}
<form asp-action="AddOrEdit" method="post">
    <input type="hidden" asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Category== null || Model.Category.Id==0)?"Create":"Update") Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="row mb-3 form-group">
            <label asp-for="Category.Name" class="control-label"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span> @*Display Server Side Validation Error*@
        </div>
        <div class="row mb-3 form-group">
            <label asp-for="Category.DisplayOrder" class="control-label"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" value="Create" class="btn btn-primary">@((Model.Category== null || Model.Category.Id==0)?"Save":"Update")</button>
            <button asp-controller="Category" asp-action="Index" class= "btn btn-secondary">Back</button>
        </div>
    </div>
</form>

@*Client Side Validation*@
@section scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }
}